modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Skill Swap Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Column Verification"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Subscription Migration"

[[workflows.workflow]]
name = "Skill Swap Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python migrations/add_skill_tracking_columns.py"

[[workflows.workflow]]
name = "Column Verification"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python verify_columns.py"

[[workflows.workflow]]
name = "Subscription Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python migrations/add_subscription_columns.py"

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
